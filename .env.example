# Neural Trading System - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# AI/ML Services
# ============================================================================

# Gemini AI API Key (for AI-powered market analysis)
# Get your key at: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=

# ============================================================================
# Trading & Market Data
# ============================================================================

# Alpaca API Keys (for paper trading and market data)
# Get your keys at: https://alpaca.markets/
VITE_ALPACA_API_KEY=
VITE_ALPACA_SECRET_KEY=

# Alpaca API Base URL (paper trading or live)
# Paper: https://paper-api.alpaca.markets
# Live: https://api.alpaca.markets
VITE_ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# Social Sentiment Analysis
# ============================================================================

# Twitter API Bearer Token (optional, for sentiment analysis)
# Get your token at: https://developer.twitter.com/
VITE_TWITTER_BEARER_TOKEN=

# ============================================================================
# Database Configuration
# ============================================================================

# AgentDB Configuration
VITE_AGENTDB_PATH=./data/agentdb.db
VITE_AGENTDB_ENABLE_WASM=true
VITE_AGENTDB_VECTOR_DIMENSIONS=384

# ============================================================================
# Application Configuration
# ============================================================================

# Initial Trading Capital (USD)
VITE_INITIAL_CAPITAL=100000

# Default Trading Symbols (comma-separated)
VITE_DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT,TSLA

# Trading Frequency (milliseconds)
VITE_TRADING_FREQUENCY=60000

# ============================================================================
# Risk Management
# ============================================================================

# Maximum Position Size (as percentage of capital, 0-1)
VITE_MAX_POSITION_SIZE=0.25

# Stop Loss Percentage (0-1)
VITE_STOP_LOSS=0.02

# Take Profit Percentage (0-1)
VITE_TAKE_PROFIT=0.05

# Maximum Drawdown (0-1)
VITE_MAX_DRAWDOWN=0.15

# Risk Per Trade (as percentage of capital, 0-1)
VITE_RISK_PER_TRADE=0.02

# ============================================================================
# AI Learning Configuration
# ============================================================================

# SAFLA Learning Rate (0-1)
VITE_SAFLA_LEARNING_RATE=0.01

# SAFLA Exploration Rate (0-1)
VITE_SAFLA_EXPLORATION_RATE=0.1

# GOAP Planning Horizon (number of steps)
VITE_GOAP_PLANNING_HORIZON=5

# ============================================================================
# Development Options
# ============================================================================

# Enable Debug Logging
VITE_DEBUG=false

# Use Real Data Feeds (set to false for simulation)
VITE_USE_REAL_FEEDS=false

# Enable Console Simulation (for development)
VITE_ENABLE_SIMULATION=true

# ============================================================================
# Optional: Advanced Features
# ============================================================================

# Lean-Agentic Formal Verification
VITE_LEAN_VERIFICATION_ENABLED=true

# Midstreamer Temporal Analysis
VITE_MIDSTREAMER_DTW_ENABLED=true

# AgentDB HNSW Index
VITE_AGENTDB_HNSW_ENABLED=true
VITE_AGENTDB_HNSW_MAX_ELEMENTS=10000

# AgentDB Reflexion Memory
VITE_AGENTDB_REFLEXION_ENABLED=true

# AgentDB Skill Library
VITE_AGENTDB_SKILL_LIBRARY_ENABLED=true

# AgentDB Causal Memory
VITE_AGENTDB_CAUSAL_MEMORY_ENABLED=true

# ============================================================================
# Security Notes
# ============================================================================
#
# IMPORTANT:
# - Never commit your actual .env file to version control
# - Add .env to your .gitignore file
# - For production, use secure secret management (e.g., HashiCorp Vault, AWS Secrets Manager)
# - Rotate API keys regularly
# - Use paper trading accounts for testing
# - Monitor API usage and costs
#
# ============================================================================
